<main class="d-flex flex-items-center flex-justify-center">
  <div class="width-full" style="max-width: 400px">
    <h2>Create a new post</h2>
    <%= form_with model: @post do |form| %>
      <div class="form-group">
        <div class="form-group-header">
          <%= form.label :title %>
        </div>
        <div class="form-group-body">
          <%= form.text_field :title, class: "form-control", autocomplete: "off", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="form-group-header">
          <%= form.label :body %>
        </div>
        <div class="form-group-body">
          <%= form.text_area :body, class: "form-control", autocomplete: "off" %>
        </div>
      </div>
      <div class="form-group">
        <%= form.submit "Create post", class: "btn btn-primary btn-block" %>
      </div>
    <% end %>
  </div>
</main>
